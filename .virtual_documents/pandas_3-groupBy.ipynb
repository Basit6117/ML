import numpy as np
import pandas as pd


movies = pd.read_csv('imdb-top-1000.csv')


movies.head(1)


# group by applyed only only on catagrical column
genre = movies.groupby('Genre')



#applying builtin aggregation functions on groupby object
genre.sum()
genre.min()
genre.max()



#find the top 3 genres by total earning
movies.groupby('Genre').sum()['Gross'].sort_values(ascending=False) # 1way
movies.groupby('Genre')['Genre'].sum().sort_values(ascending=False) #2nd way


#find the genre with highest avg IMBD rating
movies.groupby('Genre')['IMDB_Rating'].mean().sort_values(ascending=False).head(1)


#find director with most papularity
movies.groupby('Director')['No_of_Votes'].sum().sort_values(ascending=False).head(1)


#find the highest rated movie based on genre
# movies.groupby('Genre')['IMDB_Rating']



#find number of movies done by each actor
movies['Star1'].value_counts()

# with groupby
movies.groupby('Star1')['Series_Title'].count().sort_values(ascending=False)


#find total number of groups
len(movies.groupby('Genre'))


#how many rows in the specific group
movies.groupby('Genre').size()


#first movies of each genre
genres = movies.groupby('Genre')
genres.first()
genres.last()
genres.nth(6) #7th movie of each group


# to get all movies of specific group
genres.get_group('Action')  #prefered way


movies[movies['Genre'] == 'Fantasy'] #another way of doing 


genres.groups  # index of each movie in each group


#describe()  => apply on each group mathematical column
genres.describe()


#sample on gorups

genres.sample()
genres.sample(2, replace=True) #replace work if a group have not 2 mvoies so it fetch that first movie twice


#nunique
genres.nunique()



