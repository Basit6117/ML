#colors and labels
df = pd.read_csv('matplotlib_datasets/batsman_season_record.csv')
df


plt.bar(df['batsman'], df['2015'])


#multiple graphs
x = np.arange(len(df['batsman']))
bar_width = 0.15
plt.bar(x - bar_width/2, df['2015'],width=0.4)
plt.bar(x + bar_width, df['2016'],width=0.4)
plt.bar(x + bar_width/2, df['2017'],width=0.4)


#the problem in above is that x axes label is not there so can use xticks
x = np.arange(len(df['batsman']))
bar_width = 0.15
plt.bar(x - bar_width/2, df['2015'],width=0.4)
plt.bar(x + bar_width, df['2016'],width=0.4)
plt.bar(x + bar_width/2, df['2017'],width=0.4)
plt.xticks(x - bar_width/2, df['batsman']) # it gives name of each batsman in the x axes 


# a problem => when we have lengthy names of categories so it will overlape 
children = [20,40,10,50,35,25]
colors = ['red red red red red red red red', 'green green green green greengreen', 'pink pink pink pink pink', 'blue', 'yellow', 'black']
plt.bar(colors,children,color='blue')
plt.xticks(rotation='vertical') #so it will align  names vertically
plt.show()


#stacked bar chart ->Instead of placing bars side by side, a stacked bar chart places them on top of each other
# (for vertical bars) or next to each other (for horizontal bars).
categories = ['A', 'B', 'C', 'D']
men = [20, 35, 30, 35]
women = [25, 32, 34, 20]
plt.bar(categories, men, label='Men')
plt.bar(categories, women,bottom='men', label='Women')


# stacked on pandas dataset 
plt.bar(df['batsman'] ,df['2015'],label='2015')
plt.bar(df['batsman'], df['2016'],bottom=df['2015'],label='2016')
plt.bar(df['batsman'], df['2017'],bottom=(df['2015'] + df['2016']),label='2017' )
plt.legend()
plt.show()





